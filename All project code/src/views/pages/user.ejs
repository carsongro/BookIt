<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>

<main>


    <% if (locals.message) { %>
        <div
          class="alert alert-<%- locals.error ? 'danger' : 'success' %>"
          role="alert">
          <%= message %>
        </div>
        <% } %>




        <style>
        h1 { 
            color: rgb(29, 27, 27);
            text-align: center;
            font-size: 50px;
            font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        }
        
        body { 
            background-color: rgb(233, 229, 223);
        }
        
        
        p2 {
            margin-right: 200px;
            margin-left: 200px;
            text-align: left;
        }
        
        h2 {
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            color:  rgb(41, 27, 27);
            background-color: rgb(197, 184, 184);
            border: 3px solid rgb(27, 24, 24);
            font-size: 20px;
            text-align: left;
        }
        
        h3{
        
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            color:  rgb(41, 27, 27);
            background-color: rgb(197, 184, 184);
            border: 2px solid rgb(27, 24, 24);
            border-radius: 5px;
            height: 100px;
            font-size: 18px;
            margin-right: 30px;
            text-align: left;
        }
        
        p4{
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            color:  rgb(41, 27, 27);
            background-color: rgb(197, 184, 184);
            font-size: 18px;
            margin-right: 30px;
            margin-bottom: 100px;
            text-align: left;
        }
            </style>

<head>
        <h1>Profile</h1>
        </head>


<body>
  <div id="user" class="container">
           

                <h2>
                    <ul style = "list-style: none;" >
                        <div class="mb-3">
                            <li>   
                                <b>Username:</b>
                                <p4><%= data[0].username %></p4>
                            </li>
                        </div>
                        <div class="mb-3">
                            <li>
                                <b>Age:</b> 
                                <p4><%= data[0].user_age %></p4>
                            </li>
                        </div>
                        <div class="mb-3">
                            <li>
                                <b>Location:</b>
                                <p4><%= data[0].user_location %></p4>
                            </li>
                        </div>
                        <div class="mb-3">
                            <li>
                                <b>Favorite Book:</b>
                                <p4><%= data[0].favorite_book %></p4>
                            </li>
                        </div>
                        <div class="mb-3">
                            <li>
                                <b>About Me</b>
                                <h3><%= data[0].about %></h3>
                                <br>
                                <br>
                            </li>
                        </div>
                    </ul>   
                

                    <p2>            
                        <div class="mb-3">
                            <a href="/changeProfile">
                            <button type="submit" class="btn btn-primary" >Edit Profile</button>
                        </div>
                    </p2>
                </h2>


</div>
</body>



</main>

